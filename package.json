{
  "name": "rons",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "quality:check": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "pre-commit": "npm run quality:check",
    "clean": "rm -rf .next node_modules/.cache",
    "cleanup": "node scripts/cleanup.js",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:unused": "npx depcheck",
    "size:check": "npm run build && npx size-limit"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
